{% extends 'base.html.twig' %}

{% block title %}Hello ShowController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
    <h1>Product! ✅</h1>
    <li>{{ product.id }} - naam: {{ product.name }} - beschrijving: {{ product.title }} -
        categorie: {{ product.category.name??'geen categorie' }} - €{{ product.priceBtw }}</li>
    <a href="/delete/{{ product.id }}">delete</a><a href="/bewerk/{{ product.id }}">bewerk</a>
{% endblock %}