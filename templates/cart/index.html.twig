{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Cart! ✅</h1>
    {% if products is not null %}
        {% set i = 0 %}
        {% for product in products %}
            <li>{{ product.id }} - naam: {{ product.name }} - beschrijving: {{ product.title }} - categorie: {{ product.category.name??'geen categorie' }} - €{{ product.priceBtw }}</li><a href="/cart/delete/{{ i }}">verwijder</a>
            {%  set i = i + 1 %}
        {% endfor %}
        <br>
        <a href="/order/0">betalen</a>
    {% else %}
        <p>geen producten in mandje</p>
    {% endif %}
    <br>
    <a href="/cart/clear">verwijder heel mandje</a>
    <br>
    <a href="/products">producten</a>
</div>
{% endblock %}