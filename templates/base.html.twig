<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="http://symfonywebshop.test{{ path('app_products') }}">Home</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="http://symfonywebshop.test{{ path('app_products') }}">Producten</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="http://symfonywebshop.test{{ path('app_orders') }}">Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="http://symfonywebshop.test/category">categorieen bekijken</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="http://symfonywebshop.test/create">voeg product toe</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="http://symfonywebshop.test/{{ app.user ? 'logout' : 'login' }}">{{ app.user ? 'logout' : 'login' }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled">{{ app.user.email?? ''}}</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
        {% block body %}
        {% endblock %}
    </body>
</html>